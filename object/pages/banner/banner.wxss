/* pages/banner/banner.wxss */
page{
  width:100%;
  height:100%;
}
.wrap{
  width:100%;
  height:auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.big{
  width:80%;
  height:400rpx;
  border-radius: 20rpx;
}
.detail,.price,.title{
  padding: 20rpx;
  box-sizing: border-box;
  width:90%;
  font-weight: bold;
}
.small{
  width: 100%;
  height:auto;
  display: flex;
  flex-direction: column;
}
.small>image{
  width:100%;
  height:6000rpx;
}
.center{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  background-color: rgba(0, 0,0,0.4);
  position: fixed;
  top:450rpx;
  right:0;
  color:black;
  font-weight: bold;
  line-height: 100rpx;
  text-align: center;

}