page{
  width:100%;
  height:100%;
}
.con{
  width:100%;
  height:100%;
  display: flex;
  flex-direction: column;
}
.banner{
    width:100%;
    height:360rpx;
}
.banner image{
  width:100%;
  height:100%;
}
.wrap{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  background-color: black;
}
.content{
  width:40%;
  height:300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color:white;
}
.content image{
  width:250rpx;
  height:300rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}
.content view{
  flex:1;
}
.br{
  margin: 30rpx;
  box-sizing: border-box;
  width:100%;
  height:10rpx;
  background-color: #ccc;
}
.titleWrap{
  width:100%;
  height:100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 50rpx;
}
.title{
  width:55%;
  height:100rpx;
  background-color:pink;
  font-weight: bolder;
  padding:30rpx;
  box-sizing: border-box;
  color:white;
  border-radius: 20rpx;
}
.shopping{
  position: fixed;
  right:0rpx;
  bottom:0rpx;
  width:50rpx;
  height:200rpx;
  color:pink;
  font-weight: bolder;
  background-color: white;
  border-radius: 20rpx;
  line-height: 70rpx;
  text-align: center;
}