page{
  width:100%;
  height:101%;
}
.con{
  width:100%;
  height:100%;
  display: flex;
  flex-direction: column;
}
.CAI{
  width:100%;
  height:50rpx;
  background-color: white;
  line-height: 50rpx;
  text-align: center;
}
.banner{
    width:100%;
    height:360rpx;
}
.fixed{
  position: fixed; top: 0;
}

.banner image{
  width:100%;
  height:100%;
}
.wrap{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  background-color: black;
}
.content{
  width:40%;
  height:300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color:white;
}
.content image{
  width:250rpx;
  height:300rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}
.content view{
  flex:1;
}
.br{
  margin: 30rpx;
  box-sizing: border-box;
  width:100%;
  height:10rpx;
  background-color: #ccc;
}
.titleWrap{
  width:100%;
  height:100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 50rpx;
}
.title{
  margin-left: -300rpx;
  width:55%;
  height:100rpx;
  background-color:pink;
  font-weight: bolder;
  padding:30rpx;
  box-sizing: border-box;
  color:white;
  border-radius: 20rpx;
}
.shopping{
  position: fixed;
  right:0rpx;
  bottom:0rpx;
  width:50rpx;
  height:200rpx;
  color:pink;
  font-weight: bolder;
  background-color: white;
  border-radius: 20rpx;
  line-height: 70rpx;
  text-align: center;
}
.search{
  position: fixed;
  right:0rpx;
  top:380rpx;
  width:300rpx;
  height:100rpx;
  color:pink;
  font-weight: bolder;
  background-color: white;
  border-radius: 20rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 40rpx;
}
.searchWrap{
  width:100%;
  height:100%;
  background-color: rgba(0,0,0,.3);
  position: fixed;
  top:0;
  left:0;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx;
}
.searchContent{
  width:70%;
  height:70%;
  background-color: white;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}
.header{
  width:100%;
  height:80rpx;
  display: flex;
}
input{
  width:60%;
  height:80rpx;
  background-color: white;
  border-radius: 20rpx;
  border:1rpx solid red;
  line-height: 80rpx;
  padding-left: 20rpx;
  font-size: 30rpx;
}
button{
  width:30%;
  height:80rpx;
  font-size: 30rpx;
  padding: 1rpx;
  background-color: black;
  color:white;
}
.container_search{
  flex:1;
  display: flex;
  flex-direction: column;
  overflow: auto;
}
.list{
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  padding: 20rpx;
  box-sizing: border-box;
}