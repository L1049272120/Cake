/* pages/shopping/shopping.wxss */
page{
  width:100%;
  height:100%;
}
.wrap{
  width: 100%;
  height:100%;
  display: flex;
  flex-direction: column;
}
.head{
  background-color: pink;
  width:100%;
  height:100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color:white;
  font-weight: bolder;
}

.container{
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bolder;
}
.smallWrap{
  width:100%;
  height:100%;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
}
.item{
  flex-shrink: 0;
  width:100%;
  height:200rpx;
  border-bottom: 1rpx solid black;
  display: flex;
  flex-direction: row;
}
.item view{
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;
}
text{
  width:40rpx;
  height:40rpx;
  background-color: grey;
  color:white;
  line-height: 40rpx;
  text-align: center;
  border:1rpx solid black;
}
.total{
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  color:white;
  background-color: pink;
  font-weight: bolder;
}
.shopping{
  position: fixed;
  right:0rpx;
  bottom:0rpx;
  width:50rpx;
  height:400rpx;
  color:pink;
  font-weight: bolder;
  background-color: white;
  border-radius: 20rpx;
  line-height: 100rpx;
  text-align: center;
}
